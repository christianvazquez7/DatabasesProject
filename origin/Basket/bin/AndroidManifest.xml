<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.db.basket"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/basket_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.db.basket.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.db.basket.BasketLoginActivity"
            android:label="@string/title_activity_basket_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.db.basket.SignUpActivity"
            android:label="@string/title_activity_sign_up" >
        </activity>
        <activity
            android:name="com.db.basket.ForgotFieldActivity"
            android:label="@string/title_activity_forgot_field" >
        </activity>
        <activity
            android:name="com.db.basket.FrontPageActivity"
            android:label="@string/title_activity_front_page" >
        </activity>
        <activity
            android:name="com.db.basket.PicknickActivity"
            android:label="@string/title_activity_picknick" >
        </activity>
        <activity
            android:name="com.db.basket.SettingPopupActivity"
            android:label="@string/title_activity_setting_popup" 
            android:theme="@android:style/Theme.Dialog">
            
        </activity>
    </application>

</manifest>
