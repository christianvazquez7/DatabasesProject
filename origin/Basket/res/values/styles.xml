
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
     <style name="small">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">true</item>
    </style>
    
  	<style name="orangeBar" parent="small">
	<item name="android:progressDrawable">@drawable/custom_orange</item>
    <item name="android:minHeight">16dip</item>
    <item name="android:maxHeight">16dip</item>
	</style>
	
    <style name="MyTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/wood</item>
    </style>
    
    
    <style name="customTabText">
    <item name="android:textSize">14sp</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textColor">#FFFFFF</item>
	</style>     
    <style name="myTabs" parent="@android:style/TextAppearance.Widget.TabWidget" >
	<item name="android:background">@drawable/wood</item>
    <item name="android:textAppearance">@style/customTabText</item>
	</style> 
	 


</resources>
