<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical" 
    android:background="@color/orange">

    <TextView
        android:textColor="#FFFFFF"
        android:id="@+id/nameOnCardTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pedro Colon Hernandez" >
    </TextView>

    <TextView
        android:textColor="#FFFFFF"
        android:id="@+id/creditCardNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/nameOnCardTextView"
        android:text="4334450005928377" />

    <TextView
                android:textColor="#FFFFFF"
        
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/creditCardExpMonthTextView"
        android:layout_alignBottom="@+id/creditCardExpMonthTextView"
        android:layout_toRightOf="@+id/creditCardExpMonthTextView"
        android:text="/" />

    <TextView
                android:textColor="#FFFFFF"
        
        android:id="@+id/creditCardExpYearTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"
        android:text="2016" />

    <TextView
                android:textColor="#FFFFFF"
        
        android:id="@+id/creditCardExpMonthTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/creditCardNumberTextView"
        android:text="05" />

    <TextView
        android:id="@+id/bankName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/nameOnCardTextView"
        android:text="Bank of America"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />
    
    <View
            android:id="@+id/view1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/black" />

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@android:color/black" />

</RelativeLayout>