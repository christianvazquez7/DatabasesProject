        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="Order"
            android:textColor="#FFFFFF" />
    </LinearLayout>
      <RelativeLayout
               android:layout_width="fill_parent"
               android:layout_height="60dp"
               >

            <android.support.v4.view.ViewPager
                android:id="@+id/pager4"
                android:layout_width="match_parent"
                android:layout_height="match_parent" 
                android:background="#1BFFA500"
                
                >

                <LinearLayout
                    android:id="@+id/increasing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" 
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_gravity="center_vertical"
            			android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Decreasing"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/decreasing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_gravity="center_vertical"
            			android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Increasing"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                </LinearLayout>
            </android.support.v4.view.ViewPager>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/arrow_left" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/monotone_arrow_right" />

	</RelativeLayout>
	 <View
                android:id="@+id/view1"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/custom_divider" />
	   <Button
        
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_weight="0.01"
        android:background="#FFA500"
          android:textColor="#FFFFFF"
        android:text="Update" />
        </LinearLayout>
    </ScrollView>

