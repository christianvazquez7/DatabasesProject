<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/wood_light">
    
    
    <LinearLayout
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom"
        android:background="@drawable/shelfbkg"
        android:gravity="bottom|end" >

        <DatePicker
            android:id="@+id/datePicker1"
            android:layout_width="258dp"
            android:layout_height="128dp"
            android:calendarViewShown="false" />

         <View
                android:id="@+id/view1"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@android:color/darker_gray" />

        <RadioGroup
            android:layout_gravity="center_vertical"
            android:id="@+id/radioGroup1"
            
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
           >

            <RadioButton
                android:textSize="10dp"
                android:id="@+id/radio0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Year" />

            <RadioButton
                     android:textSize="10dp"
                android:id="@+id/radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Month" />

            <RadioButton
                     android:textSize="10dp"
                android:id="@+id/radio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day" />
        </RadioGroup>
        

    </LinearLayout>

       <Button
           android:id="@+id/update"
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:layout_alignParentBottom="true"
           android:layout_centerHorizontal="true"
      
           android:background="@drawable/wood"
           android:gravity="center_vertical"
           android:paddingLeft="130dp"
           android:text="Update"
           android:textColor="#FFFFFF" />
       <LinearLayout 
         android:layout_marginTop="50dp"
     
   
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corners_edit_text">
     <RelativeLayout
            android:id="@+id/account_manage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
             >

            <TextView
                android:id="@+id/adminProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Product Name"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </RelativeLayout>
        
            <View
                android:id="@+id/view1"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@android:color/darker_gray" />
                 <RelativeLayout
            android:id="@+id/account_manage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
             >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="26dp"
                android:text="Total Sales"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/total_sale_text"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="28dp"
                android:text="4,325,456"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </RelativeLayout>
        
            <View
                android:id="@+id/view1"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@android:color/darker_gray" />
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp" 
                android:id="@+id/total_sales">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="26dp"
                android:text="Total Revenue"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:visibility="invisible"
                android:id="@+id/total_gross_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24dp"
                android:text="$1,000,325.00"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </RelativeLayout>
        </LinearLayout>
    

</LinearLayout>
