<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:columnCount="2"
        android:orientation="vertical"
        android:rowCount="20" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/dummyProfileButton"
                android:layout_width="108dp"
                android:layout_height="106dp"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="0"
                android:background="@drawable/shelf"
                android:text="Dummy" />

            <Button
                                android:id="@+id/realProfileButton"
                
                android:layout_width="108dp"
                android:layout_height="106dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/dummyProfileButton"
                android:background="#2FFFA500"
                android:text="My Profile" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/custom_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/dummyBasketsButton"
                android:layout_width="108dp"
                android:layout_height="106dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/shelf"
                android:text="Dummy" />

            <Button
                                                android:id="@+id/realBasketsButton"
                
                android:layout_width="108dp"
                android:layout_height="106dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/dummyBasketsButton"
                android:background="#2FFFA500"
                android:text="My Baskets" />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/custom_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/dummyOrdersButton"
                android:layout_width="108dp"
                android:layout_height="106dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/shelf"
                android:text="Dummy" />

            <Button
                                                android:id="@+id/realOrdersButton"
                
                android:layout_width="108dp"
                android:layout_height="106dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/dummyOrdersButton"
                android:background="#2FFFA500"
                android:text="My Orders" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/custom_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/dummyMyShopButton"
                android:layout_width="108dp"
                android:layout_height="106dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/shelf"
                android:text="Dummy" />

            <Button
                android:id="@+id/realMyShopButton"
                android:layout_width="108dp"
                android:layout_height="106dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/dummyMyShopButton"
                android:background="#2FFFA500"
                android:text="My Shop" />

        </RelativeLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/custom_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/dummyFaqButton"
                android:layout_width="108dp"
                android:layout_height="106dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/shelf"
                android:text="Dummy" />

            <Button
                android:id="@+id/realFAQButton"
                android:layout_width="200dp"
                android:layout_height="106dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/dummyFaqButton"
                android:background="#2FFFA500"
                android:text="Faq" />

        </RelativeLayout>
    </LinearLayout>

</ScrollView>