<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFA500"
    >

    <TextView
        android:id="@+id/createAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/forgotField"
        android:layout_centerHorizontal="true"
        android:text="Create Account"
        android:textAppearance="?android:attr/textAppearanceSmall" />

  

    <Button
        android:id="@+id/bEditCreditCards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Login" />

    <TextView
        android:id="@+id/forgotField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="Forgot account or password"
        android:textAppearance="?android:attr/textAppearanceSmall" />

   

     <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etCategoryPage"
        android:layout_alignRight="@+id/etCategoryPage"
        android:layout_centerVertical="true"
        android:background="@drawable/round_corners_black_border"
        android:ems="10"
        android:hint="Password"
        android:paddingLeft="7dp"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/etCategoryPage"
        android:layout_width="160dp"
        android:layout_height="24dp"
        android:layout_above="@+id/editText2"
        android:layout_alignLeft="@+id/forgotField"
        android:layout_alignRight="@+id/forgotField"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_corners_black_border"
        android:ems="10"
        android:paddingLeft="7dp"
        android:hint="Username" />
</RelativeLayout>
