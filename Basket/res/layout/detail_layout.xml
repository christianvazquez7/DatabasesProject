<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
     android:background="#0AFFA500">

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:divider="@drawable/custom_divider">

        <RelativeLayout
            android:id="@+id/sellerRatings"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/wine"
             >

            <TextView
                android:textColor="#FFFFFF"
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="Seller Ratings"
                android:textAppearance="?android:attr/textAppearanceSmall"
               />

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/monotone_arrow_right" />
             
            </RelativeLayout>
            <View
                android:id="@+id/view1"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/custom_divider" />
            
        <RelativeLayout
            
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             >

            <ImageView
                android:id="@+id/ivCatPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/feats"
                android:src="@drawable/monotone_arrow_right" />

            <TextView
                android:id="@+id/feats"
                android:layout_width="270dp"
                android:layout_height="110dp"
                android:layout_alignBottom="@+id/ivCatPage"
                android:layout_alignLeft="@+id/textView4"
                android:layout_below="@+id/textView4"
                android:text="• Intel Core i7 3610QM 
• 6 GB DDR3
• 17.3-Inch Screen
• 1600x900"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="14dp"
                android:text="Product Features"
                android:textColor="#FFA500"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </RelativeLayout>
         <View
                android:id="@+id/view1"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/custom_divider" />


         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="100dp" >

             <ImageView
                 android:id="@+id/imageView1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_toRightOf="@+id/description"
                 android:src="@drawable/monotone_arrow_right" />

             <TextView
                 android:id="@+id/description"
                 android:layout_width="270dp"
                 android:layout_height="110dp"
                 android:layout_alignLeft="@+id/textView4"
                 android:layout_below="@+id/textView4"
                 android:text="The all-new Alienware 14 is compact, powerful and designed for more intense gaming anywhere you set heat sinks keep your system cool on the inside so you can game for hours on end."
                 android:textSize="12dp" />

             <TextView
                 android:id="@+id/textView4"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentTop="true"
                 android:layout_marginLeft="16dp"
                 android:layout_marginTop="14dp"
                 android:text="Product Description"
                 android:textAppearance="?android:attr/textAppearanceSmall"
                 android:textColor="#FFA500" />
         </RelativeLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/custom_divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/ivCatPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ISBN"
                    android:src="@drawable/monotone_arrow_right" />

                <TextView
                    android:id="@+id/ISBN"
                    android:layout_width="270dp"
                    android:layout_height="20dp"
                    android:layout_alignLeft="@+id/textView4"
                    android:layout_below="@+id/textView4"
                    android:text="Item Model Number: #EAD123XS"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="14dp"
                    android:text="Details"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#FFA500" />

                                <TextView
                                    android:id="@+id/pricemybasket"
                                    android:layout_width="270dp"
                                    android:layout_height="20dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_toLeftOf="@+id/ivCatPage"
                                    android:text="Shipping Weight: 9.6 pounds"
                                    android:textSize="12dp" />

                                <TextView
                                    android:id="@+id/dim"
                                    android:layout_width="270dp"
                                    android:layout_height="20dp"
                                    android:layout_alignLeft="@+id/ISBN"
                                    android:layout_below="@+id/ISBN"
                                    android:text="Dimensions: 16.4 inches x 9.2 inches x 5.2 inches"
                                    android:textSize="12dp" />

            </RelativeLayout>
              <View
                android:id="@+id/view1"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/custom_divider" />

    </LinearLayout>

</ScrollView>