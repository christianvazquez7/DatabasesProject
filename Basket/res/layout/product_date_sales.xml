<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wood_light" >

    <LinearLayout
        
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentRight="true"
        android1:layout_gravity="bottom"
        android1:background="@drawable/shelfbkg"
        android1:gravity="bottom|end" >

        <DatePicker
            android1:id="@+id/datePicker1"
            android1:layout_width="258dp"
            android1:layout_height="128dp"
            android1:calendarViewShown="false" />

         <View
             android:id="@+id/view1"
             android:layout_width="0dp"
             android:layout_height="fill_parent"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true"
             android:background="@android:color/darker_gray" />

        <RadioGroup
            android1:layout_gravity="center_vertical"
            android1:id="@+id/radioGroup1"
            
            android1:layout_width="fill_parent"
            android1:layout_height="wrap_content"
           >

            <RadioButton
                android1:textSize="10dp"
                android1:id="@+id/radio0"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:checked="true"
                android1:text="Year" />

            <RadioButton
                     android1:textSize="10dp"
                android1:id="@+id/radio1"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:text="Month" />
			<RadioButton
                android1:textSize="10dp"
                android1:id="@+id/radio2"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:text="Week" />
            <RadioButton
                     android1:textSize="10dp"
                android1:id="@+id/radio3"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:text="Day" />
        </RadioGroup>
        

    </LinearLayout>

       <Button
           android:id="@+id/update"
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:layout_alignParentBottom="true"
           android:layout_centerHorizontal="true"
      
           android:background="@drawable/wood"
           android:gravity="center_vertical"
           android:paddingLeft="130dp"
           android:text="Update"
           android:textColor="#FFFFFF" />
     <LinearLayout 
        android1:paddingLeft="10dp"
        android1:paddingRight="10dp"
        android1:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corners_edit_text">
     <RelativeLayout
            android:id="@+id/account_manage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
             >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="26dp"
                android:text="Total Sales"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:visibility="invisible"
                android1:id="@+id/total_sale_text"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:layout_alignBottom="@+id/textView1"
                android1:layout_alignParentRight="true"
                android1:layout_marginRight="28dp"
                android1:text="4,325,456"
                android1:textAppearance="?android:attr/textAppearanceSmall" />

        </RelativeLayout>
        
            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@android:color/darker_gray" />
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp" 
                android:id="@+id/total_sales">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="26dp"
                android:text="Total Revenue"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:visibility="invisible"
                android1:id="@+id/total_gross_view"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:layout_alignBottom="@+id/textView1"
                android1:layout_alignParentRight="true"
                android1:layout_marginRight="24dp"
                android1:text="$1,000,325.00"
                android1:textAppearance="?android:attr/textAppearanceSmall" />

        </RelativeLayout>
        </LinearLayout>


</LinearLayout>