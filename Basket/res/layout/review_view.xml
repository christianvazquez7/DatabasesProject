<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0AFFA500"
>

    <ImageView
        android:id="@+id/ivCatPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/reviewT"
        android:layout_toRightOf="@+id/content"
        android:src="@drawable/monotone_arrow_right" />

    <TextView
        android:id="@+id/reviewT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="14dp"
        android:text="This Movie Rocks!"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFA500" />

    <RatingBar
        android:id="@+id/bidratingBar1"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="80dp"
        android:layout_height="15dp"
        android:layout_alignLeft="@+id/content"
        android:layout_below="@+id/reviewT" />

    <TextView
        android:id="@+id/content"
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/reviewT"
        android:layout_below="@+id/bidratingBar1"
        android:text="A good bit of this film is a superhero-origins story, in which we follow Steve Rogers asd asdas das das dasdasdasdasdas" />

    <TextView
        android:id="@+id/reviewer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivCatPage"
        android:layout_toLeftOf="@+id/ivCatPage"
        android:text="-Christian VAzquez"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFA500" />

</RelativeLayout>
